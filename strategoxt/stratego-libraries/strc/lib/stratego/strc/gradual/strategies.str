strat-lookup-call(register-fresh|x, sn, tn, t) =
  strat-lookup(|x, sn, tn, t);fresh-type-vars(register-fresh)

strat-lookup-call(|x) =
    strat-env
  ; immap-filter-keys(?(x, _, _))
  ; immap-values

