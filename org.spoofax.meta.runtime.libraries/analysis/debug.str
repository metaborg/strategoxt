    	partition  := $[[project-path]/[path]];
      result-ast := <task-debug-ast> selected;
      if result-task := <foreign-call(|"Analysis", "from-task-debug-str")> result-ast then
      	filename := <guarantee-extension(|"selection.task")> path;
      	result   := result-task
