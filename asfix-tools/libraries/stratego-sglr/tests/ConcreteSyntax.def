definition
module Main
exports
  context-free start-symbols Term
  sorts Id Exp Term

  context-free syntax
    "|[" Exp        "]|" -> Term {cons("ToTerm")}

  variables
    "e"[0-9\']*     -> Exp        {prefer}
    "e"[0-9\']* "*" -> {Exp ","}* {prefer}
  
  lexical syntax
    [\ \t\n]  -> LAYOUT
    [a-zA-Z]+ -> Id
    
  lexical restrictions
    LAYOUT? -/- [\ \t\n]
  
  context-free syntax
    Id        -> Exp {cons("Var")}

    Exp "*"  Exp -> Exp  {left, cons("Mul")}
    Exp "/"  Exp -> Exp  {left, cons("Div")}
    Exp "%"  Exp -> Exp  {left, cons("Mod")}
  
    Exp "+"  Exp -> Exp  {left, cons("Plus")}
    Exp "-"  Exp -> Exp  {left, cons("Minus")}

    Id "(" {Exp ","}* ")" -> Exp {cons("Call")}

  context-free priorities
    {left:
      Exp "*"  Exp -> Exp
      Exp "/"  Exp -> Exp
      Exp "%"  Exp -> Exp
    } 
  > {left:
      Exp "+"  Exp -> Exp
      Exp "-"  Exp -> Exp
    }