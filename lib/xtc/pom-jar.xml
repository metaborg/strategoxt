<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>stratego-xtc</artifactId>
  <packaging>jar</packaging>

  <parent>
    <groupId>org.metaborg</groupId>
    <artifactId>parent.java</artifactId>
    <version>2.6.0-SNAPSHOT</version>
    <relativePath>../../../releng/parent/java</relativePath>
  </parent>

  <properties>
    <strjOutputDir>${project.build.directory}/generated-sources/strj</strjOutputDir>
    <strjLibsPath>${project.build.directory}/stratego-libs</strjLibsPath>
    <!-- Can be adapted to do bootstrap build hopefully -->
    <strjVersion>2.5.11</strjVersion>

    <xtcBaseName>stratego-xtc</xtcBaseName>
    <xtcPackage>org.strategoxt.stratego_xtc</xtcPackage>
    <xtcCTreeFile>${project.build.outputDirectory}/${xtcBaseName}.ctree</xtcCTreeFile>

    <xtcCompatBaseName>xtc-compat</xtcCompatBaseName>
    <xtcCompatPackage>org.strategoxt.lang.compat.override.xtc_compat</xtcCompatPackage>
    <xtcCompatCTreeFile>${project.build.outputDirectory}/${xtcCompatBaseName}.ctree</xtcCompatCTreeFile>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.metaborg</groupId>
      <artifactId>stratego-java-runtime</artifactId>
      <version>${strjVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.metaborg</groupId>
      <artifactId>stratego-junit-bridge</artifactId>
      <scope>test</scope>
      <version>${metaborg-version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.1.2</version>
        <executions>
          <execution>
            <id>load ctree/rtree dependencies</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.metaborg</groupId>
                  <artifactId>stratego-xtc-front</artifactId>
                  <version>${metaborg-version}</version>
                  <type>ctree</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                  <destFileName>${xtcBaseName}.ctree</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.metaborg</groupId>
                  <artifactId>stratego-xtc-front</artifactId>
                  <version>${metaborg-version}</version>
                  <type>rtree</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                  <destFileName>${xtcBaseName}.rtree</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.metaborg</groupId>
                  <artifactId>stratego-lib-front</artifactId>
                  <version>${metaborg-version}</version>
                  <type>rtree</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                  <destFileName>stratego-lib.rtree</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.metaborg</groupId>
                  <artifactId>xtc-compat-front</artifactId>
                  <version>${metaborg-version}</version>
                  <type>ctree</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                  <destFileName>xtc-compat.ctree</destFileName>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>package name to dir - stratego-xtc</id>
            <goals>
              <goal>regex-property</goal>
            </goals>
            <configuration>
              <name>xtcPackageDir</name>
              <value>${xtcPackage}</value>
              <regex>\.</regex>
              <replacement>/</replacement>
            </configuration>
          </execution>
          <execution>
            <id>package name to dir - xtc-compat</id>
            <goals>
              <goal>regex-property</goal>
            </goals>
            <configuration>
              <name>xtcCompatPackageDir</name>
              <value>${xtcCompatPackage}</value>
              <regex>\.</regex>
              <replacement>/</replacement>
            </configuration>
          </execution>
        </executions>
      </plugin>
<!--      <plugin>-->
<!--        <groupId>org.metaborg</groupId>-->
<!--        <artifactId>spoofax-maven-plugin</artifactId>-->
<!--        <version>${metaborg-version}</version>-->
<!--        <extensions>true</extensions>-->
<!--      </plugin>-->
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <!-- Using version 3 here to avoid double execution of all maven goals -->
        <version>3.0.0</version>
        <extensions>true</extensions>
        <configuration>
          <manifestLocation>META-INF</manifestLocation>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.metaborg</groupId>
            <artifactId>strategoxt-jar</artifactId>
            <version>${strjVersion}</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <id>mkdir - stratego-lib</id>
            <phase>initialize</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- workaround for bug in 1.6.0 of this plugin -->
              <longModulepath>false</longModulepath>
              <executable>mkdir</executable>
              <arguments>
                <argument>-p</argument>
                <!--suppress UnresolvedMavenProperty -->
                <argument>${strjOutputDir}/${xtcPackageDir}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>mkdir - xtc-compat</id>
            <phase>initialize</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- workaround for bug in 1.6.0 of this plugin -->
              <longModulepath>false</longModulepath>
              <executable>mkdir</executable>
              <arguments>
                <argument>-p</argument>
                <!--suppress UnresolvedMavenProperty -->
                <argument>${strjOutputDir}/${xtcCompatPackageDir}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>strj back - stratego-xtc</id>
            <phase>process-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <addOutputToClasspath>false</addOutputToClasspath>
              <includeProjectDependencies>false</includeProjectDependencies>
              <includePluginDependencies>true</includePluginDependencies>
              <sourceRoot>${strjOutputDir}</sourceRoot>
              <!-- workaround for bug in 1.6.0 of this plugin -->
              <longModulepath>false</longModulepath>
              <executable>java</executable>
              <arguments>
                <argument>-Xms512m</argument>
                <argument>-Xmx1024m</argument>
                <argument>-Xss16m</argument>
                <argument>-jar</argument>
                <argument>${settings.localRepository}/org/metaborg/strategoxt-jar/${strjVersion}/strategoxt-jar-${strjVersion}.jar</argument>
                <argument>-p</argument>
                <argument>${xtcPackage}</argument>
                <argument>--library</argument>
                <argument>-la</argument>
                <argument>stratego-lib</argument>
                <argument>-la</argument>
                <argument>org.strategoxt.lang.compat.override.xtc_compat</argument>
                <argument>-D</argument>
                <argument>GetInternalDefaultXtcRepository_0_0=None</argument>
                <argument>--cache-dir</argument>
                <argument>${project.build.directory}/stratego-cache</argument>
                <argument>--verbose</argument>
                <argument>error</argument>
                <argument>-i</argument>
                <argument>${xtcCTreeFile}</argument>
                <argument>-o</argument>
                <!--suppress UnresolvedMavenProperty -->
                <argument>${strjOutputDir}/${xtcPackageDir}/Main.java</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>strj back - xtc-compat</id>
            <phase>process-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <addOutputToClasspath>false</addOutputToClasspath>
              <includeProjectDependencies>false</includeProjectDependencies>
              <includePluginDependencies>true</includePluginDependencies>
              <sourceRoot>${strjOutputDir}</sourceRoot>
              <!-- workaround for bug in 1.6.0 of this plugin -->
              <longModulepath>false</longModulepath>
              <executable>java</executable>
              <arguments>
                <argument>-Xms512m</argument>
                <argument>-Xmx1024m</argument>
                <argument>-Xss16m</argument>
                <argument>-jar</argument>
                <argument>${settings.localRepository}/org/metaborg/strategoxt-jar/${strjVersion}/strategoxt-jar-${strjVersion}.jar</argument>
                <argument>-p</argument>
                <argument>${xtcCompatPackage}</argument>
                <argument>-la</argument>
                <argument>stratego-lib</argument>
                <argument>-la</argument>
                <argument>stratego-xtc</argument>
                <argument>--library</argument>
                <argument>--cache-dir</argument>
                <argument>${project.build.directory}/stratego-cache</argument>
                <argument>--verbose</argument>
                <argument>error</argument>
                <argument>-i</argument>
                <argument>${xtcCompatCTreeFile}</argument>
                <argument>-o</argument>
                <!--suppress UnresolvedMavenProperty -->
                <argument>${strjOutputDir}/${xtcCompatPackageDir}/Main.java</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <systemPropertyVariables>
            <strj-sut>${settings.localRepository}/org/metaborg/strategoxt-jar/${strjVersion}/strategoxt-jar-${strjVersion}.jar</strj-sut>
          </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
