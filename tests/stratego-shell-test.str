  bugreport-tests = 
    ssh-apply-test(|"SSH-1, reported by Arthur van Dam",  (),
      "import list;;

       main = <cart-set(id)> ([1, 2, 3, 4], [5, 6, 7, 8]) ;;
             
       cart-set(s) =
         ?(xs, ys)
       ; <cart-set-init> ys
       ; cart-set-foldr(|xs)
       ; cart-set-unpack ;;

       cart-set-init() =
         is-list; !(([], <id>), []) ;;

       cart-set-foldr(|xs) =
         rec x(
           \\ ((ys, []), cs) -> ((ys, []), cs) \\
        <+ \\ ((ys, [z|zs]), cs) -> <x> ((<conc> (ys, [z]), zs), [<zip> (xs, <conc> ([z|zs], ys)) | cs] ) \\
         ) ;;

       cart-set-unpack =
         ?((_,_), <id>)  ;;

       main ;;", [[(1,8),(2,5),(3,6),(4,7)],[(1,7),(2,8),(3,5),(4,6)],[(1,6),(2,7),(3,8),(4,5)],[(1,5),(2,6),(3,7),(4,8)]])
